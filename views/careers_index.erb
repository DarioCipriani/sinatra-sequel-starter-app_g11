<h1>LAS CARRERAS EXISTENTES SON:</h1>

<form action='/careers' method='POST'>
	<input type='text' name='name' placeholder= 'Nombre de la Carrera'>
	<input type='submit' value='Crear'>
</form>

<ul>
	<% @careers.map do |career| %>
		<li>
	<a href="careers/<%=career.id%>"> <%= career.name %></a>
			(<%= career.surveys.count.to_s %>)
		</li>
	<% end %>
</ul> 
